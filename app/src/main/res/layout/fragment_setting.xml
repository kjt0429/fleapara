<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="184px"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:background="@color/colorGreen"
            android:gravity="center_vertical"
            android:paddingLeft="40px"
            android:text="고객 센터"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorMiddleGray" />

    <RelativeLayout
        android:id="@+id/ic_layout"
        android:layout_width="match_parent"
        android:layout_height="184px">
        
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/csImageView"
            android:layout_marginLeft="22px"
            android:layout_marginRight="22px"
            android:src="@drawable/ic_cs"
            android:layout_width="140px"
            android:layout_height="140px" />

        <TextView
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/colorTextDarkGray"
            android:layout_centerVertical="true"
            android:text="1:1 문의 하기"
            android:layout_toRightOf="@+id/csImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:layout_alignParentRight="true"
            android:src="@drawable/img_more_btn"
            android:layout_width="23px"
            android:layout_height="43px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorMiddleGray" />
</LinearLayout>