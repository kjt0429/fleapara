<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activity.IcActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/AppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/ToolBar"
            android:layout_width="match_parent"
            android:layout_height="144px"
            android:background="#FFFFFF"

            app:popupTheme="@style/AppTheme.PopupOverlay">

            <ImageView
                android:layout_width="313px"
                android:layout_height="71px"
                android:layout_gravity="center"
                android:src="@drawable/img_toolbar_logo" />

        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray"></LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGray"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="wrap_content"
            android:layout_height="115px"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="1:1 문의하기"
            android:textColor="@color/colorTextDarkGray"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:layout_width="360px"
        android:layout_height="420px"
        android:layout_marginTop="65px"
        android:src="@drawable/ic_customer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:text="플리팔아 이용 중 궁금한 점이 생기셨나요?"
        android:textColor="@color/colorTextDarkGray"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:gravity="center_horizontal"
        android:text="메일로 보내주시면 최대한 빠른시간 내로\n답변 해드립니다."
        android:textColor="@color/colorTextGray"
        android:textSize="13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80px"
        android:gravity="center_horizontal"
        android:text="CS팀 이용 시간 | 평일 10:00 ~ 18:00\n*문의 시 답변 받을 연락처, 메일 주소 부탁드립니다."
        android:textColor="@color/colorTextGray"
        android:textSize="13sp" />
    
    <ImageView
        android:id="@+id/mailBtn"
        android:layout_marginTop="80px"
        android:src="@drawable/ic_mail"
        android:layout_width="252px"
        android:layout_height="252px" />
</LinearLayout>